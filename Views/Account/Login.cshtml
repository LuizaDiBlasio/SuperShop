@model SuperShop.Models.LoginViewModel 
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group"> @*form para username*@
                <label asp-for="Username">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-warning"></span> @*mensagem de erro caso não valide pela Data Anotation*@
            </div>
            <div class="form-group"> @*form para password*@
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-warning"></span> @*mensagem de erro caso não valide pela Data Anotation*@
            </div>
            <div class="form-group"> @*form tipo checkbox para remember me*@
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" /> @*submit não especificado faz o action com o mesmo nome da view, login neste caso*@
                <a asp-action="Register" class="btn btn-primary">Register New User</a> @*link para registrar novo user, que faz a action Register*@
                <a asp-action="RecoverPassword" class="btn btn-link">Forgot your password?</a> @*link para recuperar password*@
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

