@model SuperShop.Models.ProductViewModel //deixa de se ligar à entidade Product e passa a seguir o modelo ProductViewModel para receber o ficheiro de imagem 

@{
    ViewData["Title"] = "Create new product";
}

<h1>New Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data"> @*enctype="multipart/form-data" código para indicar que vai entrar um ficheiro nessa view*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Validação feita via javascript *@
           
            <partial name="_Products" /> @*chamar a vista parcial com conteúdo em comum de Create e Edit*@

            <div class="form-group">

                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-floppy-disk"></i> Create</button> @* Quando apertar no botão, faz submit para o POST do Create do ProductsController vai ser executado*@
                <a asp-action="Index" class=" btn btn-success"><i class="fa-solid fa-chevron-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } @* Validação feita via javascript com libraries do jquery *@
}
