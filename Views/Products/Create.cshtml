@model SuperShop.Models.ProductViewModel //deixa de se ligar à entidade Product e passa a seguir o modelo ProductViewModel para receber o ficheiro de imagem 

@{
    ViewData["Title"] = "Create new product";
}

<h1>New Product</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data"> @*enctype="multipart/form-data" código para indicar que vai entrar um ficheiro nessa view*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* Validação feita via javascript *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" /> 
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label> @*mudar para ImageFile, propriedade da ProductViewModel que contem a imagem*@
                <input asp-for="ImageFile" class="form-control" type="file" /> @*ajustar tipo de input para file, para poder receber um ficheiro*@
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastPurchase" class="control-label"></label>
                <input asp-for="LastPurchase" class="form-control" />
                <span asp-validation-for="LastPurchase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastSale" class="control-label"></label>
                <input asp-for="LastSale" class="form-control" />
                <span asp-validation-for="LastSale" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable) @* busca no modelo a disponibilidade do produto *@
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" /> @* Quando apertar no botão submite o POST do Create do ProductsController vai ser executado*@
                <a asp-action="Index" class=" btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } @* Validação feita via javascript com libraries do jquery *@
}
